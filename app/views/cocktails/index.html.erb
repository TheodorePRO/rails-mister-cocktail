



<div class="container">
  <div class="cards">
    <%  @cocktails.each do |c| %>
      <% if c.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path c.photo.key, height: 300, width: 400, crop: :fill %>')">
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?cocktail,<%=c.name%>)">
      <% end %>
        <%= link_to c.name,cocktail_path(c)%>
      </div>
    <% end %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?cocktail)">
      <%= link_to 'NEW', new_cocktail_path%>
    </div>
  </div>
</div>

